## FLASHBACK
---------------------------------------------------------------------------------
SQL> alter system set db_recovery_file_dest='/u02/flash_logs' SCOPE=spfile;
SQL> alter system set db_recovery_file_dest_size=50G SCOPE=spfile;

SQL> alter database flashback on;
SQL> select flashback_on from v$database;

SQL> create restore point CLEAN_DB guarantee flashback database; 

SQL> shut immediate;
SQL> startup mount;
SQL> FLASHBACK DATABASE TO TIMESTAMP TO_TIMESTAMP('2023-05-26 09:45:00', 'YYYY-MM-DD HH24:MI:SS');
SQL> alter database open resetlogs;
